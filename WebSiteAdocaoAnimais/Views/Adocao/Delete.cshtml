@model WebSiteAdocaoAnimais.Models.AdocaoViewModel

@{
    ViewBag.Title = "Excluir Adoção";
}

<center><h2>Excluir Adoção</h2></center>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DataAdocao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataAdocao)
        </dd>        

        <dt>
            @Html.DisplayNameFor(model => model.AdocaoSituacaoId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdocaoSituacao.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PessoaId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnimalId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Animal.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsuarioId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Login)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataHoraCadastro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataHoraCadastro)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input id="btnExcluir" type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-default", @id = "btnVoltar" })
        </div>
    }
