@model IEnumerable<WebSiteAdocaoAnimais.Models.AnimalViewModel>

@{
    ViewBag.Title = "Gerenciar Animais";
}


<center><h2>Gerenciar Animais</h2></center>

<p>
    @Html.ActionLink("Cadastrar", "Create", new { area = "" }, new { @class = "btn btn-success", @id = "btnCadastrar" })
</p>
<table id="tableGeral" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SexoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEntrada)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalSexo.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEntrada)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.AnimalId }, new { @class = "btn btn-primary", @id = "btnEditar" })
                    @Html.ActionLink("Exibir", "Details", new { id = item.AnimalId }, new { @class = "btn btn-warning", @id = "btnExibir" })
                    @Html.ActionLink("Excluir", "Delete", new { id = item.AnimalId }, new { @class = "btn btn-danger", @id = "btnExcluir" })

                </td>
            </tr>
        }
    </tbody>

</table>
