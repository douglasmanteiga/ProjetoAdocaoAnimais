@model WebSiteAdocaoAnimais.Models.PessoaViewModel

@{
    ViewBag.Title = "Editar Pessoa";
}

<center><h2>Editar Pessoa</h2></center>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
